{
    "name": "Python 3",
    "image": "mcr.microsoft.com/vscode/devcontainers/python:3.8",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "postCreateCommand": "pip install -r requirements.txt",
    "forwardPorts": [8888],
    "remoteUser": "vscode"
}